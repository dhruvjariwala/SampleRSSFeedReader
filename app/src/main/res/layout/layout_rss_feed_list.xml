<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/margin_small"
    card_view:cardCornerRadius="@dimen/card_radius"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_medium"
        >

        <ImageView
            android:id="@+id/rss_feed_image"
            android:layout_width="@dimen/image_thumb_size"
            android:layout_height="@dimen/image_thumb_size"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="@dimen/padding_medium"
            android:layout_marginRight="@dimen/padding_medium"
            android:background="@android:color/darker_gray"
            android:contentDescription="@null"
            />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/rss_feed_image"
            android:layout_toRightOf="@+id/rss_feed_image"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/publication_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_toEndOf="@+id/rss_feed_image"
            android:layout_toRightOf="@+id/rss_feed_image"
            />

        <TextView
            android:id="@+id/author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/publication_date"
            android:layout_toEndOf="@+id/rss_feed_image"
            android:layout_toRightOf="@+id/rss_feed_image"
            />
    </RelativeLayout>
</android.support.v7.widget.CardView>
